<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="swimworkoutbuilder.ui.WorkoutFormController"
            prefWidth="420" prefHeight="280">
    <center>
        <GridPane hgap="10" vgap="10" BorderPane.alignment="CENTER">
            <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>

            <columnConstraints>
                <ColumnConstraints minWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Title -->
            <Label text="Create Workout" style="-fx-font-size: 16; -fx-font-weight: bold;"
                   GridPane.columnSpan="2"/>

            <Label text="Name:" GridPane.rowIndex="1"/>
            <TextField fx:id="tfName" promptText="e.g. Tuesday Threshold" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Course:" GridPane.rowIndex="2"/>
            <ChoiceBox fx:id="cbCourse" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Default rest between groups (sec):" GridPane.rowIndex="3"/>
            <Spinner fx:id="spnRest" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Notes:" GridPane.rowIndex="4" GridPane.valignment="TOP"/>
            <TextArea fx:id="taNotes" prefRowCount="4" wrapText="true"
                      GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        </GridPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
            <padding><Insets top="0" right="12" bottom="12" left="12"/></padding>
            <Button fx:id="btnCancel" text="Cancel" onAction="#onCancel"/>
            <Button fx:id="btnSave" text="Save" defaultButton="true" onAction="#onSave"/>
        </HBox>
    </bottom>
</BorderPane>